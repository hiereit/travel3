<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
    </style>

    <style name="smallRatingBar" parent="Theme.AppCompat">
        <item name="android:progressDrawable">@drawable/custom_small_ratingbar</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:fontFamily">@font/tmoney_regular</item>
        <item name="colorAccent">@color/colorFolder</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="searchText" parent="Theme.AppCompat">
        <item name="android:editTextColor">@color/xd_gray</item>
        <item name="android:fontFamily">@font/tmoney_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/tmoney_regular</item>
        <item name="android:textColor">@color/txt_dark_gray</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>