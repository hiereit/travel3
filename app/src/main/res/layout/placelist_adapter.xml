<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="357dp"
    android:layout_height="100dp"
    android:background="#00FFFFFF">

    <EditText
        android:id="@+id/y_placeMemo"
        android:layout_width="0dp"
        android:layout_height="89dp"
        android:background="@drawable/y_plancontent"
        android:ems="10"
        android:fontFamily="@font/tmoney_regular"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="3sp"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#716E6E"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/y_placeName"
        android:layout_width="0dp"
        android:layout_height="89dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/y_yellow"
        android:fontFamily="@font/tmoney_bold"
        android:gravity="center"
        android:shadowColor="#FFFFFF"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="3"
        android:text="TextView"
        android:textColor="#FFCC5C"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/y_placeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/y_red"
        android:fontFamily="@font/tmoney_bold"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>