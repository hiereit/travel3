<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#DBFFCC5C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="26dp"
            android:fontFamily="@font/tmoney_bold"
            android:includeFontPadding="false"
            android:text="회원가입"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/join_imgBack"
            android:layout_width="51dp"
            android:layout_height="41dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:onClick="onClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/abc_vector_test" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/body2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header2">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/tmoney_regular"
            android:text="휴대전화"
            android:textColor="#000000"
            app:layout_constraintBottom_toTopOf="@+id/join_etPhone"
            app:layout_constraintStart_toStartOf="@+id/join_etPhone"
            app:layout_constraintTop_toBottomOf="@+id/join_etPwCheck"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/join_etPW"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/s_form2"
            android:ems="10"
            android:fontFamily="@font/tmoney_regular"
            android:hint="비밀번호"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <EditText
            android:id="@+id/join_etPwCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/s_form2"
            android:ems="10"
            android:fontFamily="@font/tmoney_regular"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/tmoney_regular"
            android:includeFontPadding="false"
            android:text="@string/pw_rules1"
            android:textColor="#BDBDBD"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/join_etPW"
            app:layout_constraintEnd_toEndOf="@+id/join_etPW"
            app:layout_constraintStart_toEndOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/tmoney_regular"
            android:text="비밀번호 확인"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/join_etPwCheck"
            app:layout_constraintTop_toBottomOf="@+id/join_etPW" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/tmoney_regular"
            android:text="비밀번호"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/join_etPW"
            app:layout_constraintTop_toBottomOf="@+id/join_etEmail" />

        <EditText
            android:id="@+id/join_etID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/s_form2"
            android:ems="10"
            android:fontFamily="@font/tmoney_regular"
            android:hint="입력 후 중복확인 해주세요."
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000"
            android:textColorHint="@color/xd_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/tmoney_regular"
            android:text="닉네임"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/join_etID"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/join_etPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/s_form2"
            android:ems="10"
            android:fontFamily="@font/tmoney_regular"
            android:includeFontPadding="false"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <Button
            android:id="@+id/join_btnOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/s_btnlogin"
            android:fontFamily="@font/tmoney_bold"
            android:text="회원가입 완료"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/tmoney_regular"
            android:text="이메일"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/join_etEmail"
            app:layout_constraintTop_toBottomOf="@+id/join_etID" />

        <EditText
            android:id="@+id/join_etEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/s_form2"
            android:ems="10"
            android:fontFamily="@font/tmoney_regular"
            android:includeFontPadding="false"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <Button
            android:id="@+id/btnDoubleCheck"
            android:layout_width="70dp"
            android:layout_height="23dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/s_btnlogin"
            android:fontFamily="@font/tmoney_regular"
            android:gravity="center|center_horizontal|center_vertical"
            android:includeFontPadding="false"
            android:onClick="onClick"
            android:text="중복확인"
            android:textColor="#616161"
            app:layout_constraintBottom_toTopOf="@+id/join_etID"
            app:layout_constraintEnd_toEndOf="@+id/join_etID"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/tmoney_regular"
            android:text="TextView"
            android:textColor="#FF0000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/join_etPhone"
            app:layout_constraintTop_toBottomOf="@+id/join_etPhone" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>